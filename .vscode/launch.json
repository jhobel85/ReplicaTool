{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build and Launch (WSL)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Debug/net8.0/ReplicaTool.dll",
       "args": [
        "--source", "data/source/",
        "--replica", "data/replica/",
        "--log", "logs/app.log",
        "--interval", "10",
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole",
      "preLaunchTask": "build"
    }
  ]
}